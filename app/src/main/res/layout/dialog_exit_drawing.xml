<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    android:layout_margin="12dp"
    app:cardCornerRadius="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="12dp"
        android:background="@color/white"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_trash"
            android:layout_margin="8dp"
            ></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do you want to save progress ?"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="32sp"
            android:fontFamily="@font/lilita_one_font"
            ></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel_dialog"
                android:layout_marginTop="12dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:background="@drawable/shape_btn_cancel"
                android:text="CanCel"
                android:fontFamily="@font/lilita_one_font"
                android:textSize="32sp"
                android:textColor="@color/black"
                android:layout_margin="12dp"
                >
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_save_dialog"
                android:layout_marginTop="12dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:background="@drawable/shape_btn_ok"
                android:text="save"
                android:fontFamily="@font/lilita_one_font"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                >
            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>



    </LinearLayout>





</com.google.android.material.card.MaterialCardView>
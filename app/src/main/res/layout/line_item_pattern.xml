                android:layout_height="40dp"
                android:textSize="18dp"
                android:background="#dfdfdf"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:gravity="center"
                android:text="name"
                ></TextView>

        </LinearLayout>

